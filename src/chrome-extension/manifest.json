{
  "name": "PIXI Inspector",
  "version": "0.1",
  "description": "Extends the Developer Tools, adding a tools for debugging PIXI applications.",
  "icons": {
    "16": "img/webstore-icon.png",
    "48": "img/webstore-icon.png",
    "128": "img/webstore-icon.png"
  },
  "background": { "page": "background.html" },
  "devtools_page": "devtoolsBackground.html",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pixiAgent.js"],
      "run_at": "document_idle"
    }
  ]
}
